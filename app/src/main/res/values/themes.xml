<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/TAppMainGreen</item>
        <item name="android:textColor">@color/creamy_white</item>
        <item name="colorPrimaryVariant">@color/TAppMainGreen</item>
        <item name="colorOnPrimary">@color/creamy_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/TAppMainGreen</item>
        <item name="colorSecondaryVariant">@color/TAppMainGreen</item>
        <item name="colorOnSecondary">@color/creamy_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_green</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.Spinners" parent="Theme.AppCompat.Light.NoActionBar">
